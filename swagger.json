{
  "openapi": "3.0.0",
  "info": {
    "title": "BE ECOMMERSE",
    "description": "HLTCD",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "API key authentication for webhooks (format: 'Apikey YOUR_API_KEY')"
      }
    },
    "schemas": {
      "Category": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "parentId": { "type": "string", "nullable": true }
        }
      },
      "Brand": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "logo": { "type": "string" }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number" },
          "discountPrice": { "type": "number" },
          "category": { "$ref": "#/components/schemas/Category" },
          "brand": { "$ref": "#/components/schemas/Brand" },
          "sizes": { "type": "array", "items": { "type": "string" } },
          "colors": { "type": "array", "items": { "type": "string" } },
          "images": { "type": "array", "items": { "type": "string" } },
          "stock": { "type": "number" },
          "isActive": { "type": "boolean" },
          "sku": { "type": "string", "description": "alias of legacy 'type'" },
          "totalStock": { "type": "number" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "userId": { "type": "string" },
          "items": { "type": "array", "items": { "type": "object" } },
          "status": { "type": "string" },
          "orderStatus": { "type": "string", "description": "alias of legacy 'status'" },
          "totalAmount": { "type": "number" },
          "totalPrice": { "type": "number", "description": "alias of totalAmount" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "username": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "role": { "type": "string" },
          "isActive": { "type": "boolean" }
        }
      },
      "Coupon": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "code": { "type": "string" },
          "type": { "type": "string", "enum": ["percent","fixed"] },
          "value": { "type": "number" },
          "minOrderValue": { "type": "number" },
          "startDate": { "type": "string", "format": "date-time" },
          "endDate": { "type": "string", "format": "date-time" },
          "usageLimit": { "type": "number" },
          "usedCount": { "type": "number" },
          "active": { "type": "boolean" }
        }
      },
      "Review": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "product": { "type": "string" },
          "user": { "type": "string" },
          "rating": { "type": "number", "minimum": 1, "maximum": 5 },
          "comment": { "type": "string" }
        }
      },
      "Setting": {
        "type": "object",
        "properties": {
          "shopName": { "type": "string" },
          "logo": { "type": "string" },
          "contactEmail": { "type": "string" },
          "phone": { "type": "string" },
          "address": { "type": "string" },
          "shippingFee": { "type": "number" },
          "paymentOptions": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Auth management"
    },
    {
      "name": "User",
      "description": "User"
    },
    {
      "name": "Products",
      "description": "Products"
    },
    {
      "name": "Cart",
      "description": "Cart"
    },
    {
      "name": "Orders",
      "description": "Order management"
    },
    {
      "name": "Payment",
      "description": "Payment webhook callbacks"
    },
    {
      "name": "Catalog",
      "description": "Categories & Brands"
    },
    {
      "name": "Admin",
      "description": "Admin stats"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "JohnDoe"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "id": "1",
            "token": "ey..."
          }
        }
      }
    },
    "/categories": {
      "get": { "tags": ["Catalog"], "responses": { "200": { "description": "List categories" } } },
      "post": { "tags": ["Catalog"], "security": [{"bearerAuth":[]}], "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Category" } } } }, "responses": { "201": { "description": "Created" } } }
    },
    "/categories/{id}": {
      "put": { "tags": ["Catalog"], "security": [{"bearerAuth":[]}], "parameters": [{"in":"path","name":"id","schema":{"type":"string"},"required":true}], "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Category" } } } }, "responses": { "200": { "description": "Updated" } } },
      "delete": { "tags": ["Catalog"], "security": [{"bearerAuth":[]}], "parameters": [{"in":"path","name":"id","schema":{"type":"string"},"required":true}], "responses": { "200": { "description": "Deleted" } } }
    },
    "/brands": {
      "get": { "tags": ["Catalog"], "responses": { "200": { "description": "List brands" } } },
      "post": { "tags": ["Catalog"], "security": [{"bearerAuth":[]}], "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Brand" } } } }, "responses": { "201": { "description": "Created" } } }
    },
    "/brands/{id}": {
      "put": { "tags": ["Catalog"], "security": [{"bearerAuth":[]}], "parameters": [{"in":"path","name":"id","schema":{"type":"string"},"required":true}], "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Brand" } } } }, "responses": { "200": { "description": "Updated" } } },
      "delete": { "tags": ["Catalog"], "security": [{"bearerAuth":[]}], "parameters": [{"in":"path","name":"id","schema":{"type":"string"},"required":true}], "responses": { "200": { "description": "Deleted" } } }
    },
    "/admin/stats": {
      "get": { "tags": ["Admin"], "security": [{"bearerAuth":[]}], "responses": { "200": { "description": "Admin stats" } } }
    }
    "/register": {
      "post": {
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "JohnDoe"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "create user successfully"
          }
        }
      }
    },
    "/product": {
      "get": {
        "tags": ["Products"],
        "parameters": [
          {
            "name": "sortType",
            "in": "query",
            "required": false,
            "description": "Sắp xếp sản phẩm (0: giữ nguyên,1: giữ nguyên,2: giữ nguyên, 3: sản phẩm mới nhất, 4: giá thấp đến cao, 5: giá cao đến thấp)",
            "schema": {
              "type": "string",
              "enum": ["0", "1", "2", "3", "4", "5"],
              "example": "3"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Số trang (mặc định là 1)",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Số sản phẩm mỗi trang (nếu không có thì lấy tất cả)",
            "schema": {
              "type": "integer",
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "get all products successfully"
          }
        }
      }
    },
    "/product/:productId": {
      "get": {
        "tags": ["Products"],
        "responses": {
          "200": {
            "description": "get all products successfully"
          }
        }
      }
    },
    "/related-products/:productId": {
      "get": {
        "tags": ["Products"],
        "responses": {
          "200": {
            "description": "get related products successfully"
          }
        }
      }
    },
    "/cart/:userId": {
      "get": {
        "tags": ["Cart"],
        "responses": {
          "200": {
            "description": "get all cart successfully"
          }
        }
      }
    },
    "/cart": {
      "post": {
        "tags": ["Cart"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "userId": {
                    "type": "string",
                    "example": "userId"
                  },
                  "productId": {
                    "type": "string",
                    "example": "productId"
                  },
                  "quantity": {
                    "type": "string",
                    "example": "quantity"
                  },
                  "size": {
                    "type": "string",
                    "example": "S"
                  },
                  "isMultiple": {
                    "type": "boolean",
                    "default": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "create cart successfully"
          }
        }
      }
    },
    "/cart/deleteItem": {
      "delete": {
        "tags": ["Cart"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",

                "properties": {
                  "userId": {
                    "type": "string",
                    "example": ""
                  },
                  "productId": {
                    "type": "string",
                    "example": ""
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "delete cart successfully"
          }
        }
      }
    },
    "/cart/delete": {
      "delete": {
        "tags": ["Cart"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",

                "properties": {
                  "userId": {
                    "type": "string",
                    "example": ""
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "delete cart successfully"
          },
          "400": {
            "description": "delete cart failed"
          }
        }
      }
    },
    "/user/info/:userId": {
      "get": {
        "tags": ["User"],
        "responses": {
          "200": {
            "description": "get all cart successfully"
          }
        }
      }
    },
    "/orders": {
      "post": {
        "tags": ["Orders"],
        "summary": "Tạo đơn hàng mới",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "firstName",
                  "lastName",
                  "country",
                  "street",
                  "cities",
                  "state",
                  "phone",
                  "zipCode",
                  "email"
                ],
                "properties": {
                  "firstName": {
                    "type": "string",
                    "example": "dung"
                  },
                  "lastName": {
                    "type": "string",
                    "example": "le"
                  },
                  "companyName": {
                    "type": "string",
                    "example": "cong ty a"
                  },
                  "country": {
                    "type": "string",
                    "example": "Vietnam"
                  },
                  "street": {
                    "type": "string",
                    "example": "hoang ngan"
                  },
                  "apartment": {
                    "type": "string",
                    "example": "1"
                  },
                  "cities": {
                    "type": "string",
                    "example": "thanh_pho_ha_noi"
                  },
                  "state": {
                    "type": "string",
                    "example": "huyen_ung_hoa"
                  },
                  "phone": {
                    "type": "string",
                    "example": "0366468863"
                  },
                  "zipCode": {
                    "type": "string",
                    "example": "10000"
                  },
                  "email": {
                    "type": "string",
                    "example": "dunglv@gmail.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Đơn hàng được tạo thành công",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Đơn hàng đã được tạo thành công"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dữ liệu không hợp lệ hoặc giỏ hàng trống"
          },
          "401": {
            "description": "Không có quyền truy cập"
          },
          "500": {
            "description": "Lỗi server"
          }
        }
      },
      "get": {
        "tags": ["Orders"],
        "summary": "Lấy danh sách đơn hàng của user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Danh sách đơn hàng",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Không có quyền truy cập"
          },
          "500": {
            "description": "Lỗi server"
          }
        }
      }
    },
    "/orders/{orderId}": {
      "get": {
        "tags": ["Orders"],
        "summary": "Lấy thông tin chi tiết đơn hàng",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "orderId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID của đơn hàng"
          }
        ],
        "responses": {
          "200": {
            "description": "Thông tin đơn hàng",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Không tìm thấy đơn hàng"
          },
          "401": {
            "description": "Không có quyền truy cập"
          },
          "500": {
            "description": "Lỗi server"
          }
        }
      }
    },
    "/payment/sepay-callback": {
      "post": {
        "tags": ["Payment"],
        "summary": "SePay webhook callback để xử lý thông báo thanh toán",
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "id",
                  "gateway",
                  "transactionDate",
                  "accountNumber",
                  "transferType",
                  "transferAmount",
                  "accumulated",
                  "referenceCode"
                ],
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 92704,
                    "description": "ID giao dịch trên SePay"
                  },
                  "gateway": {
                    "type": "string",
                    "example": "Vietcombank",
                    "description": "Brand name của ngân hàng"
                  },
                  "transactionDate": {
                    "type": "string",
                    "example": "2023-03-25 14:02:37",
                    "description": "Thời gian xảy ra giao dịch phía ngân hàng"
                  },
                  "accountNumber": {
                    "type": "string",
                    "example": "0123499999",
                    "description": "Số tài khoản ngân hàng"
                  },
                  "code": {
                    "type": "string",
                    "nullable": true,
                    "example": null,
                    "description": "Mã code thanh toán"
                  },
                  "content": {
                    "type": "string",
                    "example": "Thanh toan don hang ORDER_123456",
                    "description": "Nội dung chuyển khoản"
                  },
                  "transferType": {
                    "type": "string",
                    "example": "in",
                    "description": "Loại giao dịch (in là tiền vào, out là tiền ra)"
                  },
                  "transferAmount": {
                    "type": "number",
                    "example": 2277000,
                    "description": "Số tiền giao dịch"
                  },
                  "accumulated": {
                    "type": "number",
                    "example": 19077000,
                    "description": "Số dư tài khoản (lũy kế)"
                  },
                  "subAccount": {
                    "type": "string",
                    "nullable": true,
                    "example": null,
                    "description": "Tài khoản ngân hàng phụ"
                  },
                  "referenceCode": {
                    "type": "string",
                    "example": "MBVCB.3278907687",
                    "description": "Mã tham chiếu của tin nhắn sms"
                  },
                  "description": {
                    "type": "string",
                    "example": "",
                    "description": "Toàn bộ nội dung tin nhắn sms"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Callback được xử lý thành công",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Payment processed successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "orderId": {
                          "type": "string"
                        },
                        "status": {
                          "type": "string"
                        },
                        "transactionId": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "API key không hợp lệ"
          },
          "500": {
            "description": "Lỗi server"
          }
        }
      }
    }
  }
}
